<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#eee26f"

    tools:context="com.example.develop.eatit.Registro">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNombre"
        android:hint="Nombre"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:layout_alignParentEnd="true"   />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etCorreo"
        android:hint="Correo Electronico"
        android:layout_above="@+id/etContraseña"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="46dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etContraseña"
        android:hint="Password"
        android:layout_above="@+id/etNumero"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:layout_alignEnd="@+id/etNumero" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etNumero"
        android:hint="Numero Telefonico"
        android:layout_above="@+id/etDireccion"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="46dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDireccion"
        android:hint="Direccion"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/btnRegistrar"
        android:layout_alignEnd="@+id/etNumero"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:id="@+id/btnRegistrar"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etDireccion"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

