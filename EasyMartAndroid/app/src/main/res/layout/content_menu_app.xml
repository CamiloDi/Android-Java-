<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_menu_app"
    tools:context="com.example.camilo.pruebaeasymart.MenuApp"
    android:background="@drawable/sy588c69"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="82dp"
        android:background="#cce7dede">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hola"
            android:id="@+id/txtB1"
            android:textColor="#000000"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_above="@+id/txtBienvenido"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="default"
            android:id="@+id/txtBienvenido"
            android:textColor="#030303"
            android:textSize="35sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btnComenComprar"
            android:background="@drawable/btncomprar"
            android:layout_below="@+id/txtBienvenido"
            android:layout_alignLeft="@+id/txtBienvenido"
            android:layout_alignStart="@+id/txtBienvenido" />
    </RelativeLayout>

</RelativeLayout>
