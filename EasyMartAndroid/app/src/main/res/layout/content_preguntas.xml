<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_preguntas"
    tools:context="com.example.camilo.pruebaeasymart.Preguntas">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="1.-¿Cómo actualizo mis datos?"
                    android:id="@+id/textView4"
                    android:layout_column="0"
                    android:textColor="#3F51B5" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="R:Puedes actualizar tus datos dirigiéndote al menú y luego seleccionando “Datos Usuario”."
                    android:id="@+id/textView5"
                    android:layout_column="0"
                    android:textColor="#548ff4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="2.-¿Cómo puedo ver mis Boletas de compras Anteriores?"
                    android:id="@+id/textView6"
                    android:layout_column="0"
                    android:textColor="#3F51B5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="R:Para ver tus boletas anteriores puedes hacerlo dirigiéndote a menú y seleccionando “ver Boletas”, ahí podrás ver las boletas de tus compras y al seleccionarlas podrás ver el detalle de ellas."
                    android:id="@+id/textView7"
                    android:layout_column="0"
                    android:textColor="#548ff4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="3.-Si no poseo el lector de código de barra, ¿Puedo buscar el código del producto?"
                    android:id="@+id/textView8"
                    android:layout_column="0"
                    android:textColor="#3F51B5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="R:Por supuesto que sí, si no puedes leer el código de barra, puedes ingresarlo manualmente y luego seleccionar el botón “Buscar” y aparecerán los detalles del producto."
                    android:id="@+id/textView9"
                    android:layout_column="0"
                    android:textColor="#548ff4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="4.-¿Cómo puedo eliminar un producto que no deseo llevar de la lista?"
                    android:id="@+id/textView10"
                    android:layout_column="0"
                    android:textColor="#3F51B5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="R:Muy fácil, solamente debes seleccionar el producto de la lista y este se eliminara automáticamente."
                    android:id="@+id/textView11"
                    android:layout_column="0"
                    android:textColor="#548ff4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="5.-¿Con que medios puedo pagar mi compra?"
                    android:id="@+id/textView12"
                    android:layout_column="0"
                    android:textColor="#3F51B5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="R:Puedes pagar con tarjeta de crédito, débito, transferencia bancaria o en efectivo."
                    android:id="@+id/textView13"
                    android:layout_column="0"
                    android:textColor="#548ff4" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
